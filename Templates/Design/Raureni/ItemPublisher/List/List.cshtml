@{
	var posts = GetLoop("ItemPublisher:Items.List");
}
  
<h3>@Translate("New article", "Cele mai noi articole")</h3>

@if (posts.Count < 1) {
    <p class="alert warning">
        @Translate("No_posts", "Nu a fost gasit nici un articol de blog")
    </p>
} else {
    int i = 0;
    <ul>
    @foreach (var post in posts) {        
        var publishDate = post.GetDate("ItemPublisher:Item.Data").ToString("dd.MM.yyyy");
        var url = post.GetValue("ItemPublisher:Item.Url");
        var identification = post.GetValue("ItemPublisher:Items.Count");
        <li><a rel="bookmark" href="@url" title='@post.GetValue("ItemPublisher:Item.Titlu")'><i class="fa fa-circle"></i><span>@post.GetValue("ItemPublisher:Item.Titlu")</span></a></li>                  
        i++;
    }
    </ul>
}