@MasterPageFile("Master/Master.cshtml")

<!-- slider -->
<div class="home-slider">
  <div class="dwcontent flexslider" id="slider" title="Home Slider" data-settings="template:Slider.cshtml">    
  </div>
</div>

<!-- content -->
<div class="container-wide categories">
  <div class="category">  
    <div class="container">
      
      @{ 
      	var paragraphs = Dynamicweb.Content.Paragraph.GetParagraphsByPageID(GetInteger("DWPageID"));
        
        <ul id="nav">
      	@foreach (var paragraph in paragraphs)  
        {
      	  if(paragraph.ModuleSystemName == "eCom_Catalog") {
          string anchorLink = System.Text.RegularExpressions.Regex.Replace(paragraph.Header, @"[^1-9a-zA-Z]+", "");
          <li class="category-box">
            <a href="#@anchorLink"><span>@paragraph.Header</span></a>  
    	  </li>
      	  }
        }
      </ul>
      }      
      
    </div>
  </div>
</div> 


<div class="container-wide">
  <div class="category-page">        
    <div class="main">
		<div class="dwcontent" id="content" title="Main content" data-settings="template:StandardParagraph.cshtml;unwrap=true"></div>
    </div>
  </div>
</div>
